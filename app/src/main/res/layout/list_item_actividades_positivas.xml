    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:padding="16dp"
            app:cardCornerRadius="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
<!--
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_remove_circle"
                    app:layout_constraintTop_toBottomOf="@id/imageViewPositive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/ic_baseline_add_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>-->


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_positive"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/lavando_platos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_valor_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="30 pts"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/image_positive"
                    app:layout_constraintStart_toEndOf="@id/image_positive"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="No hablar en ingles"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/image_positive"
                    app:layout_constraintBottom_toBottomOf="@+id/image_positive" />


            </androidx.constraintlayout.widget.ConstraintLayout>

