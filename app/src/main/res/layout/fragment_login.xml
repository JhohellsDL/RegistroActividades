<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.loginUser.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_morado">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/transparente_gray"
            android:backgroundTint="@color/transparente_black"
            android:layout_marginHorizontal="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_login_user"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/baseline_supervised_user"
                    android:tint="@color/white_new"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/baseline_email"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_new"
                    android:hint="email"
                    android:textColor="@color/white_new"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/image_login_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:drawableStart="@drawable/baseline_key"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_new"
                    android:hint="password"
                    android:textSize="14sp"
                    android:textColor="@color/white_new"
                    android:layout_marginHorizontal="32dp"
                    app:layout_constraintTop_toBottomOf="@id/edit_text_email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_login_user"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Login"
                    android:textSize="12sp"
                    android:layout_marginTop="52dp"
                    android:textColor="@color/white_new"
                    android:layout_marginHorizontal="32dp"
                    android:backgroundTint="@color/purple_500"
                    app:layout_constraintTop_toBottomOf="@id/edit_text_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_register_user"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Register"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="32dp"
                    android:textColor="@color/white_new"
                    android:backgroundTint="@color/purple_700"
                    app:layout_constraintTop_toBottomOf="@id/button_login_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_new"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/button_register_user"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_register_google_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login with Google"
                    android:padding="18dp"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="32dp"
                    android:textColor="@color/gray_1"
                    android:backgroundTint="@color/white_new"
                    android:drawableEnd="@drawable/logo_de_google_small"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>